{
  "hooks": [
    {
      "name": "anti-ai-auto-validator",
      "description": "블로그 포스트 작성 후 Anti-AI 패턴 자동 검증",
      "trigger": {
        "type": "PostToolUse",
        "tool": "Write",
        "condition": "file_path.endsWith('.md') || file_path.endsWith('.mdx')"
      },
      "action": {
        "type": "skill-invoke",
        "skill": "anti-ai-validator",
        "params": {
          "target": "{{file_path}}",
          "auto_fix": false,
          "report_only": true
        }
      },
      "enabled": true
    },
    {
      "name": "research-citation-checker",
      "description": "작성 완료 후 인용 형식 자동 검증",
      "trigger": {
        "type": "PostToolUse",
        "tool": "Write",
        "condition": "file_path.includes('/content/') && file_path.endsWith('.mdx')"
      },
      "action": {
        "type": "skill-invoke",
        "skill": "writing-standards",
        "params": {
          "check": "citations",
          "target": "{{file_path}}"
        }
      },
      "enabled": true
    }
  ],
  "version": "1.0.0"
}
